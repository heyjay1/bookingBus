<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>회원가입</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="/javascripts/jquery-1.12.3.min.js"></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="/bootstrap-4.1.3-dist/css/bootstrap.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet">

    <script type="text/javascript">
        $(function() {
            $("#btnJoin").click(
                function() {
                    if ($("#user_id").val() == "") {
                        alert("아이디를 꼭 입력하세요");
                        $("#user_id").focus();
                        return;
                    }
                    if ($("#passwd").val() == "") {
                        alert("비밀번호를 꼭 입력하세요");
                        $("#passwd").focus();
                        return;
                    }

                    if ($("#email").val() == "") {
                        alert("이메일을 꼭 입력하세요");
                        $("#email").focus();
                        return;
                    }

                    if ($("#tel2").val() == "") {
                        alert("전화번호 두번째 자리를 확인해 주세요");
                        $("#tel2").focus();
                        return;
                    }

                    if ($("#tel3").val() == "") {
                        alert("전화번호 세번째 자리를 확인해 주세요");
                        $("#tel3").focus();
                        return;
                    }
                    var tel = $("#tel1").val() + '-' + $("#tel2").val() + '-' + $("#tel3").val();
                    $("#tel").val(tel);

                    if ($("#human_number").val() == "") {
                        alert("주민등록번호를 꼭 입력하세요");
                        $("#human_number").focus();
                        return;
                    }
                    $("#join").submit();
                }
            );
        });
    </script>
</head>

<body>
  <header>
    <div class="header">
      <div class="headTop">
        <span class="logo">
          <a href="/">
            <img class="img-responsive center-block" src="/images/logo.png" alt="logo">
          </a>
        </span>
        <!-- loginArea : 로그인 전 -->
        <div class="loginArea" style="width:125px;">
          <a href="/login">로그인</a>
          <span>|</span>
          <a href="/join">회원가입</a>
        </div>
      </div>

    </div>
  </header>
    <div class="container">
        <h2 style="color: #5e9ca0;">회원가입</h2>
        <br>
        <br>
        <br>
        <form id="join" action='/join' method='post'>
            <table class="table table-striped" width="400">
                <tr>
                    <th>아이디</th>
                    <td>
                        <input type="text" name="user_id" id="user_id" size="14" maxLength="12">
                    </td>
                </tr>
                <tr>
                    <th>비밀번호</th>
                    <td>
                        <input type="password" name="passwd" id="passwd" size="14" maxLength="12">
                    </td>
                </tr>
                <tr>
                    <th>이름</th>
                    <td>
                        <input type="text" name="name" id="name" size="14" maxLength="10">
                    </td>
                </tr>
                <tr>
                    <th>이메일</th>
                    <td>
                        <input type="email" name="email" id="email" size="30" maxLength="50">
                    </td>
                </tr>
                <tr>
                    <th>전화번호</th>
                    <td>
                        <input type="hidden" name="tel" id="tel">
                        <select name="tel1" id="tel1">
                            <option value="010">010</option>
                            <option value="011">011</option>
                            <option value="016">016</option>
                            <option value="017">017</option>
                            <option value="018">018</option>
                            <option value="019">019</option>
                        </select>

                        <input type="text" name="tel2" id="tel2" size="4" maxLength="4">
                        <input type="text" name="tel3" id="tel3" size="4" maxLength="4">
                    </td>
                </tr>
                <tr>
                    <th>성별</th>
                    <td>
                        <input type="radio" name="gender" value="남" checked="checked">남
                        <input type="radio" name="gender" value="여">여
                    </td>
                </tr>
                <tr>
                    <th>주민등록번호</th>
                    <td>
                        <input type="text" name="human_number" id="human_number" size="14" maxLength="14"></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <center>
                            <input type="submit" class="btn btn-success" id="btnJoin" name="join" value="가입">
                            <input type="reset" class="btn btn-danger" name="cancel" value="취소">
                        </center>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>

</html>
