<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <title>login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap Core CSS -->
    <link href="/bootstrap-4.1.3-dist/css/bootstrap.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script type="text/javascript">
      $(function(){
        $("#btnLogin").click(
          function() {
            if($("#username").val() == ""){
              alert("아이디를 꼭 입력하세요");
              $("#username").focus();
              return;
            }
            if($("#password").val() == ""){
              alert("비밀번호를 꼭 입력하세요");
              $("#password").focus();
              return;
            }

            $("#Login").submit();
          }
        );
      });
    </script>

    <% if(pass == false) { %>
      <script type="text/javascript">
        alert("아이디 또는 비밀번호를 확인해주세요");
      </script>
    <% } %>

  </head>

  <header>
    <div class="header">
      <div class="headTop">
        <span class="logo">
          <a href="/">
            <img class="img-responsive center-block" src="/images/logo.png" alt="logo">
          </a>
        </span>
        <!-- loginArea : 로그인 전 -->
        <div class="loginArea" style="width:125px;">
          <a href="/auth/login">로그인</a>
          <span>|</span>
          <a href="/auth/join">회원가입</a>
        </div>
      </div>
    </div>
  </header>

  <body>
    <form action="/auth/login" method="post" id="frm_login" name="frm_login">
      <div class="border-box box_changeNum">
  			<div class="inner">
  				<div class="box_inputForm">
  					<strong>아이디</strong>
  					<span class="box_label">
  						<input type="text" name="username" id="username" class="input">
  					</span>
  					<span class="ico_complete" style="display: none;">가능</span><!-- 사용가능 아이콘 -->
  				</div>
  				<div class="box_inputForm" id="password">
  					<strong>비밀번호</strong>
  					<span class="box_label">
  						<input type="password" name="password" id="password" class="input">
  					</span>
  					<span class="ico_complete" style="display: none;">가능</span><!-- 사용가능 아이콘 -->
  				</div>
        </div>
  		</div>
      <div class="jy">
        <input type="submit" class="btn btn-success" id="btnLogin" name="Login" value="Login">
      </div>
    </form>
  </body>
</html>
