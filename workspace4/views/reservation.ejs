            <input type="hidden" name="cur_SP" value="<%=cur_SP%>">
            <input type="hidden" name="cur_EP" value="<%=cur_EP%>">
            <input type="hidden" name="cur_seat" value="<%=cur_seat%>">
            <input type="hidden" name="cur_day" value="<%=cur_day%>">
            <input type="hidden" name="cur_time" value="<%=cur_time%>">
            <input type="hidden" id="cur_price" name="cur_price" value="">
            <input type="hidden" id="cur_rSeat" name="cur_rSeat" value="">
            <input type="hidden" id="cur_bnum" name="cur_bnum" value="<%=cur_bnum%>">
            <input type="submit" class="btn btn-success" id="btnReserve" name="reserve" value="예약"  >
            </form>
        </div>
